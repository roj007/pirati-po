= form_for @people_group do |f|
  - if @people_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@people_group.errors.count, "error")} prohibited this people_group from being saved:"
      %ul
        - @people_group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :group
    = f.text_field :group
  .field
    = f.label :date_begin
    = f.datetime_select :date_begin
  .field
    = f.label :date_end
    = f.datetime_select :date_end
  .actions
    = f.submit 'Save'
