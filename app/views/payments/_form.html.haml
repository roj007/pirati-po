= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :ks
    = f.number_field :ks
  .field
    = f.label :vs
    = f.number_field :vs
  .field
    = f.label :ss
    = f.number_field :ss
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :message
    = f.text_field :message
  .actions
    = f.submit 'Save'
