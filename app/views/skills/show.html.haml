%p#notice= notice

%h2
  Dovednost:
  = @skill.name
  %span.edit
    = link_to 'změnit', edit_skill_path(@skill)

%p
  - if @skill.ask
    %b Dotazníková
  - else 
    není dotazníková
- if @skill.people_skills.count==0
  %div.nula
    Nejsou zadáni žádní dobrovolníci. Můžete nějaké nalézt v seznamu a zadat.
- else
  %table
    %tr
      %th dobrovolník
      %th úroveň
      %th čas/ochota
      %th nastav
      %th doplnění
      %th telefon
      %th email
      %th jabber
      %th město
    - @skill.people_skills.each do |ps|
      %tr
        %td= link_to ps.person.full_name, ps.person
        %td
          - ps.level.times do |l|
            %span.fa.fa-star
        %td
          - ps.favor.times do |f|
            %span.fa.fa-heart
        %td= link_to 'o', edit_people_skill_path(ps)
        %td=ps.note
        %td=ps.person.phone
        %td=ps.person.email
        %td=ps.person.jabber
        %td=ps.person.town

%div.dal
  = link_to 'Přidat dobrovolníka k dovednosti', new_people_skill_path(:skill_id => @skill.id)
%br
%div.new
  = link_to 'Vytvořit novou dovednost', new_skill_path
