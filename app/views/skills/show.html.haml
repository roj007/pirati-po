%p#notice= notice

%h2
  %b Dovednost:
  = @skill.name
%p
  - if @skill.ask
    %b Dotazníková
  - else 
    není dotazníková
%table
  %tr
    %th dobrovolník
    %th úroveň
    %th čas/ochota
    %th nastav
    %th doplnění
    %th telefon
    %th email
    %th jabber
    %th město
  - @skill.people_skills.each do |ps|
    %tr
      %td= link_to ps.person.full_name, ps.person
      %td
        - ps.level.times do |l|
          %span.fa.fa-star

      %td=ps.favor
      %td= link_to 'o', edit_people_skill_path(ps)
      %td=ps.note
      %td=ps.person.phone
      %td=ps.person.email
      %td=ps.person.jabber
      %td=ps.person.town

= link_to 'Upravit atributy dovednosti', edit_skill_path(@skill)
\|
= link_to 'Seznam dovedností', skills_path
