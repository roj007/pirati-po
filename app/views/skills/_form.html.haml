= form_for @skill do |f|
  - if @skill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@skill.errors.count, "error")} prohibited this skill from being saved:"
      %ul
        - @skill.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "název "
    = f.text_field :name
  .field
    = f.label :ask, "dotazníková "
    = f.check_box :ask
  .actions
    = f.submit 'Uložit'
